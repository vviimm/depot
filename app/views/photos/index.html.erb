<div class="container">
  <div class="row">
    <h2>Photo file</h2>
    <div class="row">
      <div class="well">
        <input type="file" id="photo_image" name="photo[image]" multiple="multiple">
      </div>
      <% @photos.each do |photo|%>
        <%= image_tag photo.image.thumb.url, class: 'thumbnail' %>
      <% end %>
    </div>
  </div>

<script type="text/javascript" charset="utf-8">
  $(function () {
    Uploader.init();
  });
</script>
