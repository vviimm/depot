<div class="depot_form">
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> сведения об этом пользователе не могут быть сохранены:</h2>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset>
    <legend>Введите сведения о пользователе</legend>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <% if params[:action] == :edit %>
          <%= f.label :current_password, 'Current_pass' %><br>
          <%= f.password_field :current_password %>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>

    </fieldset>
  <% end %>
</div>
